<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/recycler_view_border"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/zipcode"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:inputType="text"
        android:text="Zipcode"
        tools:layout_editor_absoluteY="290dp"
        app:layout_constraintLeft_toRightOf="@+id/address"
        android:layout_marginLeft="48dp" />

    <Button
        android:id="@+id/datebutton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/buttonGold"
        android:text="Select Date"
        android:textColor="@color/deepBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addReportTitle" />

    <EditText
        android:id="@+id/address"
        android:layout_width="154dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:inputType="text"
        android:text="Address"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addressTitle"
        tools:layout_editor_absoluteX="60dp" />

    <Button
        android:id="@+id/timebutton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/buttonGold"
        android:text="Select Time"
        android:textColor="@color/deepBlue"
        app:layout_constraintLeft_toRightOf="@+id/datebutton"
        app:layout_constraintTop_toBottomOf="@+id/addReportTitle" />

    <Spinner
        android:id="@+id/locationType"
        android:layout_width="263dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationTypeTitle"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/locationTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="94dp"
        android:text="Select Location Type"
        android:textColor="@color/deepBlue"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addReportTitle" />

    <TextView
        android:id="@+id/addReportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="62dp"
        android:text="Add Report"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Input Address"
        android:textColor="@color/deepBlue"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationType" />

    <TextView
        android:id="@+id/boroughTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="65dp"
        android:text="Select Borough"
        android:textColor="@color/deepBlue"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressTitle" />

    <Spinner
        android:id="@+id/boroughSpinner"
        android:layout_width="267dp"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boroughTitle"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="371dp" />

    <Button
        android:id="@+id/addReportButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/buttonGold"
        android:text="Add Report"
        android:textColor="@color/deepBlue"
        app:layout_constraintTop_toBottomOf="@+id/boroughSpinner"
        android:layout_marginLeft="73dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/buttonGold"
        android:text="Cancel"
        android:textColor="@color/deepBlue"
        app:layout_constraintTop_toBottomOf="@+id/boroughSpinner"
        app:layout_constraintLeft_toRightOf="@+id/addReportButton"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
